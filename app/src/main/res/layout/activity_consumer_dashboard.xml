<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_color_selector2"
    tools:context=".Consumer_Dashboard">

    <EditText
        android:id="@+id/searchET"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/curved_border"
        android:gravity="center"
        android:hint="Search Here"
        android:inputType="textAutoComplete"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/curved_border"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/searchButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_search_24"
        android:onClick="search_farmer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/main_color_selector2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchET" />

    <android.widget.Button
        android:id="@+id/refreshButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_action_name"
        android:onClick="Refresh_Recycler_View"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchET" />

    <TextView
        android:id="@+id/farmerNameTable"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/consumer_recycler_background"
        android:gravity="center"
        android:text="Kisan's name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/farmersListRecyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchET" />

    <TextView
        android:id="@+id/farmerCityTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/consumer_recycler_background"
        android:gravity="center"
        android:text=" Kisan's city"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/farmersListRecyclerView"
        app:layout_constraintLeft_toRightOf="@+id/farmerNameTable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchET" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/farmersListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/consumer_recycler_background"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchET" />
    <!-- Farmer's profile -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/KisanProfile"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/main_color_selector"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/kisan_nameTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text=" Kisan's name"
            android:textStyle="bold|italic"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/kisanCityTV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=" City"
            android:textAlignment="textEnd"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/kisan_nameTitle"/>
        <TextView
            android:id="@+id/kisanStateTV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=" State"
            android:textAlignment="textEnd"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/kisanCityTV"/>
        <TextView
            android:id="@+id/kisanAddressTV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text=" Address"
            android:textAlignment="textEnd"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/kisanStateTV"/>
        <TextView
            android:id="@+id/kisanPhoneNumberTV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Phone no"
            android:textAlignment="textEnd"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/kisanAddressTV"/>
        <TextView
            android:id="@+id/FetchedKisanName"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Kisan's City"
            android:layout_marginStart="15dp"
            android:textAlignment="textStart"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kisan_nameTitle"/>
        <TextView
            android:id="@+id/FetchedKisanState"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Kisan's state"
            android:layout_marginStart="15dp"
            android:textAlignment="textStart"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FetchedKisanName"/>
        <TextView
            android:id="@+id/FetchedKisanAddress"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Kisan's address"
            android:layout_marginStart="15dp"
            android:textAlignment="textStart"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FetchedKisanState"/>
        <TextView
            android:id="@+id/FetchedKisanPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Kisan's Phone no"
            android:layout_marginStart="15dp"
            android:textAlignment="textStart"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FetchedKisanAddress"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kisanInventoryRV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_color_selector"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kisanPhoneNumberTV">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineH7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Item"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/border1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guidelineV8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guidelineH7"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineV8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Quantity"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/border1"
                app:layout_constraintLeft_toLeftOf="@id/guidelineV8"
                app:layout_constraintRight_toRightOf="@id/guidelineV9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guidelineH7"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineV9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Price"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/border1"
                app:layout_constraintLeft_toLeftOf="@id/guidelineV9"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guidelineH7"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guidelineH7"
                app:layout_constraintBottom_toTopOf="@+id/kisanCallButton"/>
            <android.widget.Button
                android:id="@+id/kisanCallButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Call Kisan"
                android:textColor="@color/cream"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/button_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview"
                app:layout_constraintBottom_toTopOf="@+id/goBackButton"
                />
            <android.widget.Button
                android:id="@+id/goBackButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Go Back"
                android:textColor="@color/cream"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kisanCallButton"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>